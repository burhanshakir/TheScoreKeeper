<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg5"
    xmlns:ads = "http://schemas.android.com/apk/res-auto"
    tools:context="com.example.burhan.thescorekeeper.FootballKnockout">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Standings"
        android:id="@+id/bAddTeam"
        android:onClick="addTeam"
        android:layout_marginTop="60dp"
        android:background="@drawable/viewteam"
        android:layout_below="@+id/textView9"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Match"
        android:id="@+id/bCreateMatch"
        android:onClick="createMatch"
        android:background="@drawable/create"
        android:layout_above="@+id/bResults"
        android:layout_alignLeft="@+id/bAccessDetails"
        android:layout_alignStart="@+id/bAccessDetails" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bResults"
        android:onClick="results"
        android:background="@drawable/results"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/bAddTeam"
        android:layout_marginTop="60dp"
        android:layout_alignRight="@+id/bAddTeam"
        android:layout_alignEnd="@+id/bAddTeam" />

    <ImageButton
        android:layout_width="wrap_content"
        android:background="@drawable/access"
        android:layout_height="wrap_content"
        android:text="Tournament Access Details"
        android:id="@+id/bAccessDetails"
        android:onClick="access"
        android:layout_below="@+id/bCreateMatch"
        android:layout_marginTop="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView9"
        android:text="TOURNAMENT OVERVIEW"
        android:layout_alignParentTop="true"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="View Teams"
        android:id="@+id/textView15"
        android:layout_below="@+id/bAddTeam"
        android:gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Match"
        android:id="@+id/textView16"
        android:layout_below="@+id/bCreateMatch"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Results"
        android:id="@+id/textView19"
        android:gravity="center"
        android:layout_below="@+id/bResults"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tournament Access Details"
        android:id="@+id/textView20"
        android:layout_below="@+id/bAccessDetails"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center"/>
    <com.google.android.gms.ads.AdView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/adView"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-2911937502615384/1713833750"/>

</RelativeLayout>
